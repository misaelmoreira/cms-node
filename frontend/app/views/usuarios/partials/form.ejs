<% 
if(this.usuario === undefined){
    this.usuario = {
        nome: "",
        login: "",
        senha: "",
        email: ""
    }
}
%>

<div class="form-group">
    <label for="nome">Nome:</label>
    <input type="text" class="form-control" value="<%= usuario.nome %>" name="nome" id="nome">
</div>
<div class="form-group">
    <label for="login">Login:</label>
    <input type="text" class="form-control" value="<%= usuario.login %>" name="login" id="login">
</div>
<div class="form-group">
    <label for="senha">Senha:</label>
    <input type="password" class="form-control" value="<%= usuario.senha %>" name="senha" id="senha">
</div>
<div class="form-group">
    <label for="email">E-mail:</label>
    <input type="email" class="form-control" value="<%= usuario.email %>" name="email" id="email">
</div>


