<%- include('../shared/header') %>

<div class="container">
  <div class="mt-5">
    <h1>
      Alterar Usuario: 
    </h1>
  <div>
    <%= usuario.erro %></div>
  </div>

  <div class="container mt-2 mb-5">   
    <form action="/usuarios/<%= usuario.id %>/atualizar" method="post"> 
      <%- include('partials/form', {usuario: usuario})  %>   
      <div class="mt-3">
        <button type="submit" class="btn btn-warning">Atualizar</button>
        <button type="button" class="btn btn-secondary" onclick="window.location = '/usuarios';">Voltar</button>
      </div>       
    </form>    
  </div>
</div>

<%- include('../shared/footer') %>

